@model DatabaseConnection.Pages.Students.UpdateModel
@{
}


<h1>:: Update Student Page</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">

            <input type="hidden" asp-for="Student.Id" />


            <div class="form-group">
                <label asp-for="Student.StudentID" class="control-label"></label>
                <input type="text" asp-for="Student.StudentID" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Student.StudentName" class="control-label"></label>
                <input type="text" asp-for="Student.StudentName" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Student.StudentLName" class="control-label"></label>
                <input type="text" asp-for="Student.StudentLName" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Student.StudentCourse" class="control-label"></label>
                <input type="text" asp-for="Student.StudentCourse" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Student.StudentStatus" class="control-label"></label>
                <input type="text" asp-for="Student.StudentStatus" class="form-control" />
            </div>


            <div class="form-group">
                <label asp-for="Student.StudentYear" class="control-label"></label>
                <input type="text" asp-for="Student.StudentYear" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Student.StudentLevel" class="control-label"></label>
                <input type="text" asp-for="Student.StudentLevel" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>

        </form>
        </div>
</div>