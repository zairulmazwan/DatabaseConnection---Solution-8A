@page
@model DatabaseConnection.Pages.Students.ViewDataModel
@{
}

<h1>:: View Student Record ::</h1>

<div>
    <div>
        <table class="table">
            <tr>
                <th>Number</th>
                <th>Student ID</th>
                <th>Student Name</th>
                <th>Student Last Name</th>
                <th>Student Course</th>
                <th>Status</th>
                <th>Year</th>
                <th>Level</th>
                <th>Actions</th>

            </tr>

            @for (int i = 0; i < Model.StudentRec.Count; i++)
            {
                <tr>
                    <td>@(i+1)</td>
                    <td>@Model.StudentRec[i].StudentID</td>
                    <td>@Model.StudentRec[i].StudentName</td>
                    <td>@Model.StudentRec[i].StudentLName</td>
                    <td>@Model.StudentRec[i].StudentCourse</td>
                    <td>@Model.StudentRec[i].StudentStatus</td>
                    <td>@Model.StudentRec[i].StudentLevel</td>
                    <td>@Model.StudentRec[i].StudentYear</td>
                    <td>
                        <a asp-page="/Students/Update" asp-route-id="@Model.StudentRec[i].Id">Update </a>
                        <a asp-page="/Students/Delete" asp-route-id="@Model.StudentRec[i].Id">Delete</a>

                    </td>
               
                </tr>
            }

        </table>
    </div>
</div>
